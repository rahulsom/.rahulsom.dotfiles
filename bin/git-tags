#!/bin/bash
git tag --format='%(creatordate:short)%09%(refname:strip=2)%09%(objectname)%09%(subject)' --sort=creatordate \
      | awk '
          BEGIN { FS = "\t" }
          {
            # Color codes: date=cyan(36), tag=green(32), hash=yellow(33), subject=white(37)
            printf "\033[36m%s\033[0m\t\033[32m%s\033[0m\t\033[33m%s\033[0m\t\033[37m%s\033[0m\n", $1, $2, substr($3, 1, 7), $4
          }
        ' \
      | column -t -s $'\t'
