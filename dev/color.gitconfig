[color]
	# Colour terminal command output when possible.
	ui = auto
[color "branch"]

	current = yellow reverse
	local = yellow
	remote = green

[color "diff"]

	meta = yellow bold
	frag = magenta bold # line info
	old = red # deletions
	new = green # additions
	whitespace = "red reverse"

[color "status"]

	added = yellow
	changed = green
	untracked = cyan